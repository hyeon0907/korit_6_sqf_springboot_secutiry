<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.SpringSecutiryMybatis.repository.UserMapper">
    <insert id="save" parameterType="com.study.SpringSecutiryMybatis.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
        values(default, #{username}, #{password}, #{name})

    </insert>

    <select id="findByUserName" resultType="com.study.SpringSecutiryMybatis.entity.User">
        select
            id,
            username,
            password,
            name
        from
            user
        where
            username = #{username}

    </select>
</mapper>